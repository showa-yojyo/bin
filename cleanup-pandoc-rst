#!/bin/bash
# cleanup-pandoc-rst: modify reStructuredText contents that generated by Pandoc.

sect1=$(python -c 'print("=" * 70)')
sect2=$(python -c 'print("-" * 70)')
sect3=$(python -c 'print("~" * 70)')
sect4=$(python -c 'print("^" * 70)')

# XXX: support sed -i
sed -E "
s/^={10,}$/$sect1/
s/^-{10,}$/$sect2/
s/^~{10,}$/$sect3/
s/^\^{10,}$/$sect4/" \
"${1:-/dev/stdin}"
