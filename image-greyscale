#!/bin/bash

# ImageMagick â€“ Command-line Options
# <https://imagemagick.org/script/command-line-options.php#grayscale>

set -o errexit
set -o nounset
set -o pipefail

usage="Usage: ${0##*/} INPUT_IMAGE_PATH OUTPUT_IMAGE_PATH"
input="${1:?${usage}}"
output="${2:?${usage}}"

magick "$input" -colorspace Gray "$output"
